<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">


    <http use-expressions="true">
        <access-denied-handler error-page="/error"/>

        <!-- Garden -->
        <intercept-url pattern="/savegarden/**" access="permitAll"/>
        <intercept-url pattern="/garden/**" access="permitAll"/>
        <intercept-url pattern="/upload/**" access="isAuthenticated()"/>
        <intercept-url pattern="/addyear/**" access="isAuthenticated()"/>
        <intercept-url pattern="/deleteyear/**" access="isAuthenticated()"/>
        <!-- Species -->
        <intercept-url pattern="/addspecies/**" access="isAuthenticated()"/>
        <intercept-url pattern="/update-species/**" access="isAuthenticated()"/>
        <intercept-url pattern="/listspecies/**" access="permitAll"/>
        <intercept-url pattern="/species/**" access="permitAll"/>
        <intercept-url pattern="/visible/**" access="isAuthenticated()"/>
        <intercept-url pattern="/deletespecies/**" access="isAuthenticated()"/>
        <intercept-url pattern="/addrule/**" access="isAuthenticated()"/>
        <!-- User -->
        <intercept-url pattern="/signup/**" access="permitAll"/>
        <intercept-url pattern="/changepassword/**" access="isFullyAuthenticated()"/>
        <intercept-url pattern="/edituser/**" access="isAuthenticated()"/>
        <intercept-url pattern="/user/**" access="permitAll"/>
        <intercept-url pattern="/login/**" access="permitAll"/>

        <!-- About -->
        <intercept-url pattern="/help" access="permitAll"/>
        <intercept-url pattern="/about" access="permitAll"/>
        <intercept-url pattern="/hastalavista" access="permitAll"/>

        <intercept-url pattern="/static" access="permitAll"/>
        <intercept-url pattern="/src/main/webapp/META-INF" access="denyAll"/>
        <!-- default-target-url="/garden" -->

        <form-login login-page="/login" always-use-default-target="false"
                    authentication-success-handler-ref="authenticationListener"/>

        <logout success-handler-ref="authenticationListener"/>
        <remember-me data-source-ref="dataSource"
                     user-service-ref="customUserDetailsService"
                     key="smigoRememberMeKey"/>
    </http>


    <authentication-manager alias="authenticationManager" erase-credentials="true">
        <authentication-provider user-service-ref="customUserDetailsService">
            <password-encoder ref="passwordEncoder"/>
        </authentication-provider>
    </authentication-manager>

    <beans:bean id="passwordEncoder" class="org.smigo.security.BCryptPasswordEncoder"/>
</beans:beans>
